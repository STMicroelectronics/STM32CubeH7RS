#include "region_defs.h"

LR_CODE BL2_CODE_START {

    ER_CODE (BL2_CODE_START) FIXED (BL2_CODE_SIZE) {
        *.o (RESET +First)
        .ANY (+RO)
    }

    ER_DATA (BL2_DATA_START) (BL2_DATA_SIZE-BL2_MSP_STACK_SIZE-BL2_HEAP_SIZE) {
        .ANY (+ZI +RW)
    }

    /* MSP */
    ARM_LIB_STACK +0 ALIGN 32 EMPTY BL2_MSP_STACK_SIZE {
    }

    ARM_LIB_HEAP +0 ALIGN 8 EMPTY BL2_HEAP_SIZE {
    }

    RW_RAMECC_HANDLE BL2_RAMECC_HANDLE_START UNINIT BL2_RAMECC_HANDLE_SIZE {
     *(.bss.ramecchandle)
    }

    RW_CONF_FLAG BL2_CONF_FLAG_START UNINIT BL2_CONF_FLAG_SIZE {
      *(.bss.flagnoinit)
    }

    RW_DATA_NOINIT BL2_DATA_NOINIT_START UNINIT BL2_DATA_NOINIT_SIZE {
      *(.bss.noinit)
    }

    RW_DMA_SHARED_MEM BL2_DMA_SHARED_MEM_START BL2_DMA_SHARED_MEM_SIZE {
      *(.dma_shared_mem)
    }
}

